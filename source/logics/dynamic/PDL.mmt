namespace http://cds.omdoc.org/logic

//   Propositional Dynamic Logic 

theory PDLExtendedSyntax : http://cds.omdoc.org/urtheories?LF =
  include ?PDLMinimalSyntax 
  skip : PDLProg  = true ? 
  fail : PDLProg  = (¬ true) ? 
  ifThenElse : prop → PDLProg → PDLProg → PDLProg 
  	= [ φ, α, β ] φ? | α ∪ ¬φ? | β 
  whileDo : prop → PDLProg → PDLProg  
  	= [ φ, α ] (φ? | α)* | ¬ φ ? 
  repeatUntil : PDLProg → prop → PDLProg 
  	= [ α, φ ] α | (¬φ? | α)* | φ? 



	

