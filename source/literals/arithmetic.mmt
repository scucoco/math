namespace literals

theory Literals : ur:?LF =
  lit  : type


//   theory for numeric literals

  
theory Arithmetic : ur:?LF =
  include ?Literals
  add  : lit → lit → lit  # 1 + 2
  sub  : lit → lit → lit  # 1 - 2
  neg  : lit → lit        # - 1
  mult : lit → lit → lit  # 1 * 2
  div  : lit → lit → lit  # 1 / 2

