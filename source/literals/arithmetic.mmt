namespace literals

//   Representation of HOL Light following http://hol-light.googlecode.com/svn/trunk/fusion.ml
     @author Florian Rabe


theory Numbers : ur:?LF =
  num  : type


theory Arithmetic : ur:?LF =
  include ?Numbers
  add  : num → num → num  # 1 + 2
  sub  : num → num → num  # 1 - 2
  neg  : num → num        # - 1
  mult : num → num → num  # 1 * 2
  div  : num → num → num  # 1 / 2

